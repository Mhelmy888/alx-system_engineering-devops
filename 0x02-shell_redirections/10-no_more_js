#!/bin/bash

# Function to delete files with a specific extension recursively
delete_files_with_extension() {
    local directory="$1"
    local extension="$2"

    # Find and delete files with the specified extension
    find "$directory" -type f -name "*$extension" -print -delete
}

# Specify the current directory
current_directory=$(pwd)

# Specify the extension of the files to delete
file_extension=".js"

# Call the function to delete the files
delete_files_with_extension "$current_directory" "$file_extension"
