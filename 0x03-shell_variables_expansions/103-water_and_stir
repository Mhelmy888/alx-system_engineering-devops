#!/bin/bash

# Retrieve the values stored in the environment variables
water_value="$WATER"
stir_value="$STIR"

# Convert the values from their respective bases to decimal
water_decimal=$(echo "$water_value" | tr 'water' '01234')
stir_decimal=$(echo "$stir_value" | tr 'stir.' '01234')

# Perform the addition and convert to base "bestchol"
result_decimal=$((water_decimal + stir_decimal))
result_bestchol=$(echo "obase=bestchol; $result_decimal" | bc)

# Print the result
echo "$result_bestchol"
